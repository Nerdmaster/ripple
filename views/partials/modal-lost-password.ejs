<div id="get-credentials" class="modal-single-input modal hide fade"  role="alert">
  <div class="modal-header">
    <button class="close" data-dismiss='modal'>x</button>
    <h3>Retrieve Password</h3>
  </div>
  <div class="modal-body">
    <form action="" method="post" id="get-credentials-form" class="well span5">
      <input type="hidden" name="login-type" value="password-recovery" />
      <p>Please enter the email address associated with your account</p>
      <input type="text" name="email" id='email-tf' class="span5 required" />
      <button id="submit" type="submit" class="btn btn-primary">Submit</button>
      <button id="cancel" class="btn" data-dismiss="modal">Cancel</button>
      <div>
        <br />
        <div class="alert alert-error hide"></div>
        <div class="loader hide"></div>        
      </div>
      <button class="close" data-dismiss="alert"></button>
    </form>
  </div>
  <div class="modal-footer"></div>    
</div>
